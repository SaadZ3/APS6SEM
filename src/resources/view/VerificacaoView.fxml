<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="350.0" prefWidth="580.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.controller.VerificacaoController">
    <children>
        <VBox layoutX="50.0" layoutY="30.0" spacing="15.0">
            <children>
                <Label text="Verificação de Biometria">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>
                <Label text="Usuário:" />
                <TextField fx:id="txtUsuario" />
                <Button fx:id="btnSelecionarImagem" mnemonicParsing="false" onAction="#selecionarImagem" text="Selecionar Imagem da Digital" />
                <Label fx:id="lblCaminhoImagem" text="Nenhuma imagem selecionada." />
                <Button fx:id="btnVerificar" mnemonicParsing="false" onAction="#verificar" text="Verificar" />
            </children>
        </VBox>
    </children>
</AnchorPane>