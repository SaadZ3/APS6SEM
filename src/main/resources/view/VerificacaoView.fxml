<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="450.0" prefWidth="580.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.controller.VerificacaoController">
    <children>
        <VBox layoutX="50.0" layoutY="30.0" spacing="15.0">
            <children>
                <Label text="Verificação de Biometria">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>

                <Label text="Usuário:" />
                <TextField fx:id="txtUsuario" />

                <Label text="Verificar usando:" />
                <ComboBox fx:id="cmbTipoBiometria" prefWidth="200.0" promptText="Selecione o tipo" />

                <VBox fx:id="boxDigital" managed="false" spacing="5.0" visible="false">
                    <children>
                        <Label text="Biometria (Impressão Digital):" />
                        <Button fx:id="btnSelecionarImagem" onAction="#selecionarImagemDigital" text="Selecionar Imagem da Digital" />
                        <Label fx:id="lblCaminhoImagem" text="Nenhuma imagem selecionada." />
                    </children>
                </VBox>

                <VBox fx:id="boxRosto" managed="false" spacing="5.0" visible="false">
                    <children>
                        <Label text="Biometria (Reconhecimento Facial):" />
                        <ImageView fx:id="imgWebcamRosto" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
                        <Button fx:id="btnLigarCamera" onAction="#ligarCamera" text="Ligar Câmera" />
                        <Button fx:id="btnCapturarRosto" disable="true" onAction="#capturarRosto" text="Capturar Rosto" />
                        <Label fx:id="lblCaminhoImagemRosto" text="Nenhum rosto capturado." />
                    </children>
                </VBox>

                <Button fx:id="btnVerificar" mnemonicParsing="false" onAction="#verificar" text="Verificar" />
            </children>
            <Button fx:id="btnVoltar" mnemonicParsing="false" onAction="#voltarParaHome" text="Voltar" />
        </VBox>

    </children>
</AnchorPane>